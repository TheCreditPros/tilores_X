# Railway Container Environment Simulation
# This Dockerfile simulates Railway's container environment for local testing

FROM python:3.11-slim

# Simulate Railway container environment variables
ENV RAILWAY_ENVIRONMENT=production
ENV CONTAINER=true
ENV PYTHONUNBUFFERED=1
ENV PYTHONDONTWRITEBYTECODE=1

# Set working directory
WORKDIR /app

# Install system dependencies for Railway compatibility
RUN apt-get update && apt-get install -y \
    curl \
    && rm -rf /var/lib/apt/lists/*

# Copy requirements and install Python dependencies
COPY requirements.txt .
RUN pip install --no-cache-dir -r requirements.txt

# Copy application code
COPY . .

# Create Railway-like environment constraints
# Simulate Railway's network timeout constraints
ENV REDIS_CONNECT_TIMEOUT=2
ENV HTTP_TIMEOUT=5
ENV SSL_VERIFY=false

# Simulate Railway startup command
CMD ["python", "main_autonomous_production.py"]

# Health check for container validation
HEALTHCHECK --interval=30s --timeout=10s --start-period=5s --retries=3 \
    CMD curl -f http://localhost:8000/health || exit 1
