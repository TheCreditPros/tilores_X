TILORES_GRAPHQL_API_URL=https://ly325mgfwk.execute-api.us-east-1.amazonaws.com
TILORES_OAUTH_TOKEN_URL=https://saas-swidepnf-tilores.auth.us-east-1.amazoncognito.com/oauth2/token
