OPENROUTER_API_KEY=<GET_FROM_OPENROUTER_DASHBOARD>

# =============================================================================
# APPLICATION CONFIGURATION
# =============================================================================

# Environment Settings
ENVIRONMENT=unified
NODE_ENV=production
APP_NAME=tilores-unified-api
APP_VERSION=4.6.3
PORT=8080

# Customer Configuration
CUSTOMER_ID=customer-001
CUSTOMER_NAME="Default Customer"

# Security Configuration (CHANGE IN PRODUCTION)
JWT_SECRET=generate_secure_jwt_secret_for_production
ENCRYPTION_KEY=generate_secure_encryption_key_for_production
CORS_ORIGIN=*

# Logging Configuration
LOG_LEVEL=info
LOG_FORMAT=json

# Rate Limiting
RATE_LIMIT_WINDOW=900000
RATE_LIMIT_MAX=100

# Feature Flags
ENABLE_ADVANCED_SEARCH=true
ENABLE_EXPORT_FEATURES=true
ENABLE_BULK_OPERATIONS=true

# Monitoring
HEALTH_CHECK_INTERVAL=30000
METRICS_ENABLED=true

# =============================================================================
# REDIS CACHE CONFIGURATION (Phase VI Performance Optimization)
# =============================================================================

# Redis Connection Settings
REDIS_URL=redis://localhost:6379/0
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=
REDIS_ENABLED=true

# Redis Performance Settings
REDIS_TIMEOUT=5000
REDIS_MAX_CONNECTIONS=10
REDIS_CONNECTION_POOL_SIZE=5

# Cache TTL Settings (in seconds)
REDIS_TTL_TILORES_FIELDS=3600        # 1 hour - Field discovery cache
REDIS_TTL_CUSTOMER_SEARCH=3600       # 1 hour - Customer search cache
REDIS_TTL_CREDIT_REPORTS=7200        # 2 hours - Credit report cache
REDIS_TTL_LLM_RESPONSES=86400        # 24 hours - LLM response cache

# Cache Key Prefixes
REDIS_PREFIX_FIELDS=tilores:fields:
REDIS_PREFIX_CUSTOMER=tilores:customer:
REDIS_PREFIX_CREDIT=tilores:credit:
REDIS_PREFIX_LLM=tilores:llm:

# Performance Monitoring
REDIS_METRICS_ENABLED=true
REDIS_LOG_CACHE_HITS=true
REDIS_LOG_CACHE_MISSES=true

# =============================================================================
# AI-SDLC SPECIFIC CONFIGURATION
# =============================================================================

# Test Environment Configuration
TEST_BASE_URL=https://tilores-unified-api-production.up.railway.app
RUN_LIVE_TESTS=false  # Set to true to enable live API testing
AI_GENERATE_TESTS=true  # Enable AI test generation
PERFORMANCE_MONITORING=true  # Enable performance monitoring

# =============================================================================
# DEPLOYMENT KEYS (for CI/CD)
# =============================================================================

# Render API Key (for deployment - Get from https://dashboard.render.com/account/settings)
RENDER_API_KEY=<GET_FROM_RENDER_DASHBOARD>
